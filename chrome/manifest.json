{
  "manifest_version": 3,
  "name": "AI Grammar Pro",
  "version": "1.6",
  "description": "Real-time grammar checking with AI-powered rephrasing",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "http://192.168.6.2:8010/*",
    "http://192.168.6.2:30068/*"
  ],
  "background": { 
    "service_worker": "background.js" 
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["style.css"],
    "run_at": "document_idle"
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
